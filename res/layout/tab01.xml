<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="20dp"
    android:layout_marginTop="3dp"
    android:orientation="horizontal" >

    <ImageView 
        android:id="@+id/top_left_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/rt_bk"
        />
    <TextView 
        android:id="@+id/top_text"
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="森林果园"/>

    <ImageView
        android:id="@+id/top_right_image"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/heart1" />

</RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fruitshop" />

    <LinearLayout
        android:id="@+id/gonggao"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal" >
   <TextView 
       android:id="@+id/notice"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:text="公告"
       />
   <ImageView 
        android:id="@+id/notice_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/megaphone" 
       />
   </LinearLayout>
   <TextView
       android:id="@+id/notice_info"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:visibility="invisible"
       android:maxLines="3"
       android:text="最近商品打折，快来买！！！啊但是看哈开始开会"
       />
   <TextView 
       android:id="@+id/shop"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:text="店铺信息"
       />
   <TextView
       android:id="@+id/shop_info"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:visibility="invisible"
       android:text="店铺位置，联系方式，服务范围" 
       />
</LinearLayout>
</LinearLayout>